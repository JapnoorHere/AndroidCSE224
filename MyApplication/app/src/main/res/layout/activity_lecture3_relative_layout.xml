<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/img_9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lecture3RelativeLayout"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/nameText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImage"
        android:text="Name: "
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nameText1"
        android:layout_marginTop="20dp"
        android:text="Japnoor Singh"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dobText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/profileImage"
        android:layout_below="@id/nameText1"
        android:text="D.O.B: "
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dobText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@id/dobText1"
        android:text="02/10/2004"
        android:layout_below="@id/nameText1"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/emailText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/profileImage"
        android:layout_below="@id/dobText1"
        android:text="Email: "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@id/emailText1"
        android:text="abc@gmail.com"
        android:textColor="@color/white"
        android:layout_below="@id/dobText1"
        android:textAlignment="center"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/bioTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio: "
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/bioTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am an enthusiastic Android and Full Stack Web Developer. Looking forward to learn and grow more. I am skilled in Android Kotlin, MERN Stack, UI/UX."
        android:layout_below="@id/bioTextView1"
        android:justificationMode="inter_word"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:padding="10dp"
        app:cornerRadius="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:backgroundTint="#e68457"
        android:layout_below="@id/bioTextView2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/btn1"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:backgroundTint="#469383"
        android:layout_below="@id/bioTextView2"
        android:layout_toEndOf="@id/btn1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn2"
        />



</RelativeLayout>